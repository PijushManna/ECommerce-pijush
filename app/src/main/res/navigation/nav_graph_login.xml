<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginHomeFragment">

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.blogspot.ecommerce_pijush.login.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_productHomeFragment"
            app:destination="@id/productHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.blogspot.ecommerce_pijush.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_productHomeFragment"
            app:destination="@id/productHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginHomeFragment"
        android:name="com.blogspot.ecommerce_pijush.login.LoginHomeFragment"
        android:label="LoginHomeFragment" >
        <action
            android:id="@+id/action_loginHomeFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginHomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_loginHomeFragment_to_productHomeFragment"
            app:destination="@id/productHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/productHomeFragment"
        android:name="com.blogspot.ecommerce_pijush.products.ProductHomeFragment"
        android:label="fragment_product_home"
        tools:layout="@layout/fragment_product_home" >
        <action
            android:id="@+id/action_productHomeFragment_to_loginHomeFragment"
            app:destination="@id/loginHomeFragment"
            app:popUpTo="@id/loginHomeFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>